<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

    <EditText
        android:id="@+id/fr1_et1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Safe Args"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fr1_btn1_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Args"
        app:layout_constraintStart_toStartOf="@+id/fr1_et1"
        app:layout_constraintTop_toBottomOf="@+id/fr1_et1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fr1_et2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Bundle"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/fr1_btn2_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Bundle"
        app:layout_constraintStart_toStartOf="@+id/fr1_et2"
        app:layout_constraintTop_toBottomOf="@+id/fr1_et2" />
</androidx.constraintlayout.widget.ConstraintLayout>